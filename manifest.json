{
  "manifest_version": 3,
  "name": "Reel.fyi Chrome Extension",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["src/contentScripts/linkedin/index.tsx"]
    },
    {
      "matches": ["*://*.reel.fyi/*"],
      "js": ["src/contentScripts/reel/index.tsx"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting", "clipboardWrite", "storage"],
  "host_permissions": ["*://*.linkedin.com/*", "*://*.reel.fyi/*"],
  "externally_connectable": {
    "matches": ["*://*.reel.fyi/*"]
  }
}
